<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SettingsFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_margin="20dp"
        android:text="@string/settings_text"
        android:textSize="30dp"
        android:textColor="@color/purple_2"
        android:textStyle="bold"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="85dp"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtshowemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColorHint="@color/purple_2"
            android:outlineSpotShadowColor="#ff0000"
            android:theme="@style/EditTextHintGray"
            android:enabled="false"
            app:startIconDrawable="@drawable/ic_mail">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textColorHint="@color/purple_1"
                android:singleLine="true"
                android:textColor="@color/purple_2"></EditText>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtshowrole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColorHint="@color/purple_2"
            android:outlineSpotShadowColor="#ff0000"
            android:theme="@style/EditTextHintGray"
            android:enabled="false"
            app:startIconDrawable="@drawable/ic_role">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Role"
                android:textColorHint="@color/purple_1"
                android:singleLine="true"
                android:textColor="@color/purple_2"></EditText>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txteditusername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColorHint="@color/purple_2"
            android:outlineSpotShadowColor="#ff0000"
            android:theme="@style/EditTextHintGray"
            app:startIconDrawable="@drawable/ic_person">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:textColorHint="@color/purple_1"
                android:singleLine="true"
                android:textColor="@color/purple_2"></EditText>
        </com.google.android.material.textfield.TextInputLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_margin="5dp"
            android:background="@color/purple_2"
            android:textColor="@color/purple_1">
        </androidx.appcompat.widget.AppCompatButton>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnResetPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:layout_margin="5dp"
            android:background="@color/purple_2"
            android:textColor="@color/purple_1">
        </androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="120dp"
            android:background="@color/orange_2"
            android:textColor="@color/orange_1">
        </androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>

</FrameLayout>